<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="@drawable/fondo">

    <TextView
        android:id="@+id/tvDetalleEquipoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles del Equipo"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNombreEquipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="20sp"
        android:textColor="#686767"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetalleEquipoNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCapitanEquipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CapitÃ¡n:"
        android:textSize="18sp"
        android:textColor="#686767"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreEquipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvIntegrantesEquipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Integrantes:"
        android:textSize="18sp"
        android:textColor="#686767"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCapitanEquipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
